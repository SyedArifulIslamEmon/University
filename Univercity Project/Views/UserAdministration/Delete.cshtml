@model Univercity_Project.Models.Employee

@{
    ViewBag.Title = "مدیریت کابران";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>حذف کاربر</h2>

<h3>آیا میخواهید این کاربر را پاک کنید؟ </h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("شماره پرسنلی")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("نام")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.First_Name)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("نام خانوادگی")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Last_Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت", "Index")
        </div>
    }
</div>
