@model Univercity_Project.Models.Employee

@{
    ViewBag.Title = "مدیریت کاربران";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>ویرایش اطلاعات</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.Id)


    <fieldset class="form-horizontal">
        <div class="control-group">
            @Html.Label("شماره پرسنلی", new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
            </div>
        </div>
        <div class="control-group">
            @Html.Label("شماره ملی", new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.National_ID)
            </div>
        </div>
        <h4>ویرایش نقش کاربر</h4>
        <hr />
        @Html.DropDownList("RoleId")
        <div class="form-actions no-color">
            <input type="submit" value="ذخیره" class="btn btn-primary" />
        </div>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
