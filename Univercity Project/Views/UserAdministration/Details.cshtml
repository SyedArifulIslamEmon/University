    </dl>
</div>
<hr />
<h4>لیست نقش ها</h4>
<table class="table table-striped">
    @foreach (var item in ViewBag.RoleName)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
        </tr>
    }
</table>
