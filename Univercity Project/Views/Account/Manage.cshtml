
@{
    ViewBag.Title = "مدیریت حساب کاربری";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.HasLoaclPassword)
        {
            @Html.Partial("Change_Password_Partial")
        }
        else
        {
            @Html.Partial("Set_Password_Partial")
        }
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
